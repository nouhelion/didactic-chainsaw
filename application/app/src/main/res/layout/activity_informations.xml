<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".informations">

    <TextView
        android:id="@+id/profil"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/profile"
        android:textAppearance="@style/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/avatar"
        android:src="@drawable/avatar"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profil"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_width="63dp"
        android:layout_height="54dp"/>

    <Button
        android:id="@+id/bar"
        android:layout_width="170dp"
        android:layout_height="5dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
    </Button>

    <TextView
        android:id="@+id/sara"
        android:text="@string/sara"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/sara"
        android:layout_marginStart="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bar"
        android:layout_width="150dp"
        android:layout_height="30dp"/>


    <ImageView
        android:id="@+id/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/x"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav"
        android:background="@drawable/nav"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/hom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:src="@drawable/home_"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/cal"
            app:layout_constraintStart_toStartOf="@id/hom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="100dp"
            android:src="@drawable/calender_"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/not"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/notification_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/cal"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/per"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/not"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="TODO" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>