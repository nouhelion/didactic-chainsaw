<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <ImageView
        android:id="@+id/img"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/dsc"
        android:src="@drawable/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"></ImageView>

    <TextView
        android:id="@+id/care_line"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:text="@string/care_line"
        android:textAppearance="@style/care_line"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"></TextView>

    <EditText
        android:id="@+id/input_1"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:background="@drawable/input"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/mail"
        android:inputType="text"
        android:textColorHint="#BABABA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/care_line"
        tools:ignore="TextContrastCheck">
    </EditText>

    <EditText
        android:id="@+id/input_2"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:autofillHints=""
        android:background="@drawable/input"
        android:hint="@string/mdp"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_email"
        android:textColorHint="#BABABA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_1"
        tools:ignore="TextContrastCheck">
    </EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:text="@string/connect"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_2"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck"></Button>

    <TextView
        android:id="@+id/nouveau_mem"
        android:layout_width="141dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/nouveau_mem"
        android:textAppearance="@style/nouveau_mem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        tools:ignore="TextContrastCheck"></TextView>

    <TextView
        android:id="@+id/insc"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/insc"
        android:textAppearance="@style/insc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/nouveau_mem"
        tools:ignore="TextContrastCheck"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>